.logo
	width: 100%
	height: 220px
	position: relative
	overflow: hidden

.name
	logoFont()
	font-size: 2em
	font-weight: bold
	padding-left: 50%
	margin-left: -70px
	line-height: 1.2em

.tagline
	logoFont()
	font-size: 0.8em
	padding-left: 50%
	margin-left: -30px

.cube
	cube(100px, rgba(126,169,232,0.5))
	spin()
	margin: -50px 0 0 -50px
	top: 50%
	left: 50%

.cube-inner
	cube(50px, rgba(16,58,177,0.5))
	margin: -25px 0 0 -25px
	spin(fastspin)
